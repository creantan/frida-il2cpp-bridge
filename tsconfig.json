{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": false,
    "stripInternal": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "utils": [
        "utils/accessor"
      ]
    }
  }
}